{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "dist",
        //"sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "esModuleInterop": true,
        //"strict": true,
        "noUnusedLocals": true,
        //"noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "server/**/*.ts",
        "server/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}